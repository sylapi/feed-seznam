{
    "name": "sylapi/feed-seznam",
    "description": "Merchant feeds",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0.0",
        "sylapi/feed": "@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../feed/"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12.77"        
    },
    "autoload": {
        "psr-4": { 
            "Sylapi\\Feeds\\Seznam\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": { "Sylapi\\Feeds\\Seznam\\Tests\\": "tests/" }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse src tests",
        "coverage": "XDEBUG_MODE=coverage  vendor/bin/phpunit --verbose --coverage-text",
        "coverage-html": "XDEBUG_MODE=coverage  vendor/bin/phpunit --coverage-html ./coverage/"
    },
    "prefer-stable": false        
}
